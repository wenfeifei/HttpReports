<body>

    <!-- start: Header -->
    <div class="navbar" role="navigation">

        <div class="container-fluid">

            <ul class="nav navbar-nav navbar-actions navbar-left">
                <li class="visible-md visible-lg"><a href="#" style="padding:0 10px;" id="main-menu-toggle"><i class="fa fa-th-large"></i></a></li>
                <li class="visible-xs visible-sm"><a href="#" id="sidebar-menu"><i class="fa fa-navicon"></i></a></li>
            </ul>

            <ul class="nav navbar-nav navbar-right">

                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-dashboard"></i></a>
                    <ul class="dropdown-menu update-menu" role="menu">
                        <li>
                            <a data-key="light" onclick="ChangeTheme(this)"><i class="fa fa-sun-o"></i> 亮色模式 </a>
                        </li>
                        <li>
                            <a data-key="dark" onclick="ChangeTheme(this)"><i class="fa fa-moon-o"></i> 暗色模式 </a>
                        </li>
                    </ul>
                </li>

                <li class="dropdown" style="margin-right:20px">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i></a>
                    <ul class="dropdown-menu update-menu" role="menu">
                        <li>
                            <a>admin</a>
                        </li>
                        <li>
                            <a onclick="show_password_modal()">修改账号 </a>
                        </li>
                        <li>
                            <a href="/HttpReports/UserLogOut"> 退出登陆 </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
    <!-- end: Header -->

    <div class="container-fluid content">

        <div class="row">

            <!-- start: Main Menu -->
            <div class="sidebar">

                <div class="sidebar-collapse">
                    <div class="sidebar-header t-center">
                        <a id="logo_title" href="/HttpReports" class="logo_title animated pulse infinite slow" style="line-height: 44px; margin-left: 48px;  font-size: 18px;text-align:center;float:left;font-weight:bold;color:#FFF;text-decoration: none">HttpReports</a>
                    </div>
                    <div class="sidebar-menu">

                        <ul class="nav nav-sidebar">

                            <li data-title="HomePage1" class="meun1"><a href="/HttpReports/Index"><i class="fa fa-laptop"></i><span class="text">基础数据</span></a></li>

                            <li data-title="HomePage1" class="meun1"><a href="/HttpReports/Trend"><i class="fa fa-bar-chart-o"></i><span class="text">趋势数据</span></a></li>

                            <li data-title="HomePage1" class=""><a href="/HttpReports/Detail"><i class="fa fa-bars"></i><span class="text">请求列表</span></a></li>

                            <li data-title="HomePage1" class=""><a href="/HttpReports/Monitor"><i class="fa fa-rocket"></i><span class="text">预警监控</span></a></li>
                        </ul>
                    </div>
                </div>
                <div class="sidebar-footer">
                </div>
            </div>
            <!-- end: Main Menu -->
            <!-- start: Content -->
            <div class="main" style="width:98%;margin:20px auto">

                @RenderBody()
            </div>

            <!-- end: Content -->
            <br>

            <p class="footer-copyright" style="text-align:center;font-size:14px">HttpReports - SpringLee</p>
            <br><br>
        </div><!--/container-->
    </div>


    <div class="modal fade userModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <span class="modal-title">修改账号</span>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>用户名</label>
                        <input autocomplete="new-password" type="text" class="form-control update_username">
                    </div>
                    <div class="form-group">
                        <label>旧密码</label>
                        <input autocomplete="new-password" type="password" class="form-control update_oldpwd">
                    </div>
                    <div class="form-group">
                        <label>新密码</label>
                        <input autocomplete="new-password" type="password" class="form-control update_newpwd">
                    </div>
                    <button style="width:100%" type="submit" onclick="update_password()" class="btn btn-info">保 存</button>
                </div> 
            </div>
        </div>
    </div>


    <div class="clearfix"></div>

    <input type="hidden" id="meun" value="@(ViewData["menu"] == null ? "HomePage":ViewData["menu"] )" />
</body>
